{
  "name": "@folio/checkout",
  "version": "1.2.0",
  "description": "Item Check-out",
  "repository": "folio-org/ui-checkout",
  "publishConfig": {
    "registry": "https://repository.folio.org/repository/npm-folio/"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "main": "index.js",
  "stripes": {
    "type": "app",
    "displayName": "ui-checkout.meta.title",
    "route": "/checkout",
    "queryResource": "query",
    "icons": [
      {
        "name": "app",
        "alt": "Check out items on behalf of patrons",
        "title": "Checkout"
      }
    ],
    "okapiInterfaces": {
      "circulation": "3.0 4.0",
      "configuration": "2.0",
      "item-storage": "5.0",
      "loan-policy-storage": "1.0",
      "users": "15.0"
    },
    "permissionSets": [
      {
        "permissionName": "module.checkout.enabled",
        "displayName": "UI: Check out module is enabled"
      },
      {
        "permissionName": "ui-checkout.all",
        "displayName": "Check out: All permissions",
        "description": "Entire set of permissions needed to use Check out",
        "visible": true,
        "subPermissions": [
          "circulation.all",
          "circulation-storage.all",
          "configuration.all",
          "users.collection.get",
          "module.checkout.enabled"
        ]
      },
      {
        "permissionName": "settings.checkout.enabled",
        "displayName": "Settings (Check out): Display list of settings for Check out",
        "visible": true,
        "subPermissions": [
          "settings.enabled"
        ]
      }
    ]
  },
  "scripts": {
    "start": "stripes serve",
    "lint": "eslint .",
    "test": "(cd ../ui-testing; yarn test-module -- -o --run=checkout:error_messages --host=localhost)"
  },
  "devDependencies": {
    "@folio/eslint-config-stripes": "^3.2.0",
    "@folio/stripes-cli": "^1.4.0",
    "@folio/stripes-connect": "^3.1.0",
    "@folio/stripes-core": "^2.11.0",
    "@folio/stripes-logger": "^0.0.2",
    "babel-eslint": "^9.0.0",
    "eslint": "^5.5.0",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "webpack": "^4.10.2"
  },
  "dependencies": {
    "@folio/stripes-components": "^3.0.0",
    "@folio/stripes-smart-components": "^1.4.15",
    "lodash": "^4.17.4",
    "prop-types": "^15.5.10",
    "react-audio-player": "^0.9.0",
    "react-intl": "^2.4.0",
    "react-router-dom": "^4.0.0",
    "redux-form": "^7.0.3"
  },
  "peerDependencies": {
    "@folio/stripes-connect": "^3.1.0",
    "@folio/stripes-core": "^2.11.0",
    "react": "*"
  },
  "optionalDependencies": {
    "@folio/plugin-find-user": "^1.1.0"
  }
}
